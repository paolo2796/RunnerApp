<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/info_how_reach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/how_reach_tw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/how_reach"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/subinfo_how_reach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/how_reach_tw">

            <ImageView
                android:id="@+id/distance_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_distance_30dp"
                android:tint="@color/colorPrimaryLight"/>

            <TextView
                android:id="@+id/duration_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/distance_img"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                android:text="Sto cercando la tua posizione..."/>

            <TextView
                android:id="@+id/distance_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/duration_tw"
                android:layout_centerVertical="true" />





        </RelativeLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center_horizontal">
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loading_direction"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minHeight="60dp"
            android:minWidth="60dp"
            android:visibility="visible"
            android:layout_centerInParent="true"
            app:indicatorName="BallPulseIndicator"
            app:indicatorColor="@color/colorAccent" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="317dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*">

        <TableRow
            android:gravity="center">
            <TextView
                android:id="@+id/datestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="data" />

            <TextView
                android:id="@+id/starthour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="20:30"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="Giorno"
                android:textColor="@color/colorAccentDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="Ora"
                android:textColor="@color/colorAccentDark"/>
        </TableRow>


        <TableRow>
            <TextView
                android:id="@+id/estimatedkm_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="km previsti" />

            <TextView
                android:id="@+id/estimatedhm_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="20h e 1m"/>


        </TableRow>



        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="KM Previsti"
                android:textColor="@color/colorAccentDark"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="Tempo Completamento"
                android:textColor="@color/colorAccentDark"/>


        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center_horizontal">
    </LinearLayout>

    <Button
        android:id="@+id/followers_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:text="Followers"/>


</LinearLayout>