<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/infotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/infotextsx"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icondatestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/ic_datestart_24dp"/>

            <TextView
                android:id="@+id/datestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:text="data" />

        </LinearLayout>


        <LinearLayout

            android:id="@+id/infotextdx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_starthour_24dp"/>

            <TextView
                android:id="@+id/starthour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="20:30"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ictimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timer_24dp"/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="iniziata"/>


    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/pointmeetmap"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:apiKey="com.google.android.geo.API_KEY"
        android:focusableInTouchMode="true"
        map:liteMode="true"
        android:enabled="true" />


    <Button
        android:id="@+id/participatebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_button"
        android:text="@string/adactive_participation"
        android:onClick="requestParticipation"
        android:visibility="visible"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_button"
        android:text="@string/adactive_cancel"
        android:onClick="cancelParticipation"
        android:visibility="gone" />

    <Button
        android:id="@+id/delayparticipation_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/delay_participation"
        android:text="@string/adactive_start"
        android:visibility="gone" />



</LinearLayout>

