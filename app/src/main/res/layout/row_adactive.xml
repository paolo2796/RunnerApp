<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/row_adsuper"></include>


    <Button
        android:id="@+id/participationbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_button"
        android:text="@string/adactive_participation"
        android:onClick="requestParticipation"
        android:visibility="visible"
        android:textColor="#FFFFFF" />


    <Button
        android:id="@+id/delayparticipation_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/delay_participation"
        android:text="@string/adactive_start"
        android:visibility="gone" />


</LinearLayout>

