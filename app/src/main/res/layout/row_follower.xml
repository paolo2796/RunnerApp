<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nick_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@id/profilerunner_img"
        android:layout_centerVertical="true"
        android:textSize="15sp" />



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilerunner_img"
        android:layout_centerHorizontal="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"/>



    <TextView
        android:id="@+id/level_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profilerunner_img"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:textSize="15sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"></LinearLayout>

</RelativeLayout>