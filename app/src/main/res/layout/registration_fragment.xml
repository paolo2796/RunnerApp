<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/welcome_tw"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/emailreg_et"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="Email"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/nickreg_et"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/emailreg_et"
                android:gravity="center"
                android:hint="Nickname"

                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/passreg_et"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/nickreg_et"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="Password"
                android:inputType="number"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/profileload_btn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/passreg_et"
                android:layout_alignStart="@id/emailreg_et"
                android:background="@drawable/rectangle_corner"
                android:drawableBottom="@drawable/ic_person_black_24dp"
                android:drawableRight="@drawable/ic_camera_alt_black_24dp" />


            <EditText
                android:id="@+id/namereg_et"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@id/passreg_et"
                android:layout_below="@id/passreg_et"
                android:gravity="center"
                android:hint="Nome"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"/>


            <EditText
                android:id="@+id/surnamereg_et"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@id/passreg_et"
                android:layout_below="@id/namereg_et"
                android:gravity="center"
                android:hint="Cognome"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/datebirthreg_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/emailreg_et"
                android:layout_alignEnd="@id/emailreg_et"
                android:layout_below="@id/profileload_btn"
                android:paddingLeft="10dp"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@null"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="Data Nascita" />



            <EditText
                android:id="@+id/weightreg_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignStart="@id/emailreg_et"
                android:layout_alignEnd="@id/emailreg_et"
                android:layout_below="@id/datebirthreg_btn"
                android:gravity="center"
                android:hint="Peso"
                android:inputType="number"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"/>


            <TextView
                android:id="@+id/namelevel_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/emailreg_et"
                android:layout_below="@id/weightreg_et"
                android:text="Il tuo livello"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>

            <Spinner
                android:id="@+id/levelreg_sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@id/emailreg_et"
                android:layout_alignStart="@id/emailreg_et"
                android:layout_centerInParent="true"
                android:layout_below="@id/namelevel_tw"
                android:gravity="center"
                android:background="@color/tempv_celestial" />

        </RelativeLayout>

    </ScrollView>




    <Button
        android:id="@+id/sendregistration_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_below="@id/scroll"
        android:background="@android:color/white"
        android:gravity="center"
        android:textColor="@color/tempv_celestial"
        android:text="Registrati"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
