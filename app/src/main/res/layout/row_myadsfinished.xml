    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/boxsxinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/boxinside_datestart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icondatestart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_datestart_24dp"
                    android:tint="@color/icon_inforun"/>

                <TextView
                    android:id="@+id/datestart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="20:30"
                    android:textColor="@color/colorPrimaryLight"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/boxinside_starthour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_timer_30dp"
                    android:tint="@color/icon_inforun"/>

                <TextView
                    android:id="@+id/starthour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="20:30"
                    android:textColor="@color/colorPrimaryLight"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxinside_burnedcal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconburnedcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_calories_24dp"
                    android:tint="@color/icon_inforun"/>

                <TextView
                    android:id="@+id/burnedkal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="20:30"
                    android:textColor="@color/colorPrimaryLight"/>

            </LinearLayout>


        </LinearLayout> <!-- end boxinside sx -->


        <RelativeLayout
            android:id="@+id/boxdxinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/boxsxinfo"
            android:layout_alignTop="@id/boxsxinfo"
            android:layout_alignBottom="@id/boxsxinfo"
            android:layout_weight="1">

            <TextView
                android:id="@+id/travelledkm_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_inforun"
                android:padding="7dp"
                android:textSize="40sp"
                android:text="520" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/travelledkm_tw"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                android:text="Km percorsi"/>



        </RelativeLayout><!-- end box dx info -->

        <Button
            android:id="@+id/detailrun_btnfinished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boxdxinfo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Dettagli"
            android:backgroundTint="@color/colorAccent"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    
